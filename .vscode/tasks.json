{
    "version": "2.0.0",

    // The command is tsc. Assumes that tsc has been installed using npm install -g typescript
    "command": "tsc",

    // args is the HelloWorld program to compile.
    "args": [],

    // use the standard tsc problem matcher to find compile problems
    // in the output.
    "problemMatcher": "$tsc",
    "tasks": [
        {
            "label": "tsc",
            "type": "shell",
            "command": "tsc",
            "problemMatcher": "$tsc",
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}
